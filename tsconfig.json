{
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"target": "ES2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"typeRoots": ["./src/types", "node_modules/@types"]
	}
}
